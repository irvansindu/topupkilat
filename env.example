# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/topupkilat

# Redis
REDIS_URL=redis://localhost:6379

# Auth / Supabase
AUTH_SECRET=generate-your-own-secret-key-here
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Payment Provider (mock|xendit|midtrans)
PAYMENT_PROVIDER=mock
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Topup Provider (mock|aggregator|vipreseller)
TOPUP_PROVIDER=vipreseller
TOPUP_API_KEY=your-topup-api-key
TOPUP_API_SECRET=your-topup-api-secret

# VIP Reseller API (https://vip-reseller.co.id)
VIPRESELLER_API_KEY=your-vipreseller-api-key
VIPRESELLER_API_ID=your-vipreseller-api-id

# Application
APP_BASE_URL=http://localhost:3000
APP_NAME=TopUpKilat
SUPPORT_EMAIL=support@topupkilat.example
CS_WHATSAPP=+62-8xx-xxxx-xxxx

# Encryption (for sensitive data)
ENCRYPTION_KEY=generate-32-char-encryption-key

# Development
NODE_ENV=development
